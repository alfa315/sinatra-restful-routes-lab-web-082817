<h3>Recipes Current ingredients<%=@recipe.ingredients%></h3>

<form action="/recipes/<%=@recipe.id%>" method="post">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="name">Recipe Name:</label>
  <input id="name" type="text" name="name" value="name"><br>

  <label for="ingredients">Recipe Ingredients:</label>
  <input id="ingredients" type="text" name="ingredients" value="ingredients"><br>

  <label for="cook_time">Recipe Cook Time:</label>
  <input id="cook_time" type="text" name="cook_time" value="cook_time"><br>

  <input type="submit" value="submit">

</form>
